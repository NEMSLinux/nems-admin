#!/bin/bash
echo $0 > /var/www/html/userfiles/nems-build.cur

# Install Python 3.9.2 for Adagios on NEMS Linux 1.7
if [[ ! -e /usr/lib/python3.9 ]]; then
  cd /tmp/
  wget https://www.python.org/ftp/python/3.9.2/Python-3.9.2.tgz
  tar xzvf Python-3.9.2.tgz
  cd Python-3.9.2
  ./configure --enable-optimizations --prefix=/usr/lib/python3.9
  make
  make install
fi

# Switch the default to Python 3.9.2
update-alternatives --install /usr/bin/python3 python $(which python3) 1
update-alternatives --install /usr/bin/python3 python /usr/lib/python3.9/bin/python3 2
yes '' | update-alternatives --config python

if [[ -e /usr/lib/python*/EXTERNALLY-MANAGED ]]; then
  echo "Clearing Externally Managed flag from Python..."
  rm /usr/lib/python*/EXTERNALLY-MANAGED
  echo "Done."
fi

exit 0
