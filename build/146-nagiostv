#!/bin/bash
echo $0 > /var/www/html/userfiles/nems-build.cur

if [[ -d /var/www/nagiostv ]]; then
  echo 'Reinstalling NagiosTV...'
  a2disconf nagiostv
  rm /etc/apache2/conf-available/nagiostv.conf
  rm -rf /var/www/nagiostv
else
  echo 'Installing NagiosTV...'
fi

tmpdir=`mktemp -d -p /usr/src/`
cd $tmpdir

if [[ -e /var/www/nagiostv ]]; then
  rm -rf /var/www/nagiostv
fi

# Obtain NagiosTV from Chris Carey
nagiostv_ver="0.9.2"
wget https://github.com/chriscareycode/nagiostv-react/releases/download/v${nagiostv_ver}/nagiostv-${nagiostv_ver}.tar.gz
tar xvfz nagiostv-${nagiostv_ver}.tar.gz
mv nagiostv /var/www/

# If successful, enable NagiosTV
if [[ -d /var/www/nagiostv ]]; then
  # Add the apache2 conf
  if [[ -e /root/nems/nems-migrator/data/apache2/conf-available/nagiostv.conf ]]; then
    # This will be the default in 1.6+
    cp -f /root/nems/nems-migrator/data/apache2/conf-available/nagiostv.conf /etc/apache2/conf-available/
  else
   # Account for the Migrator differences between 1.6 and 1.5.x. In 1.5 the migrator data folder contained version.
    cp -f /root/nems/nems-migrator/data/1.6/nagiostv.conf /etc/apache2/conf-available/
  fi
# Output the default configuration
# Can be modified in NEMS SST
echo '{
  "titleString": "NEMS Tactical Overview",
  "dataSource": "livestatus",
  "baseUrl": "/nagios/cgi-bin/",
  "livestatusPath": "connectors/livestatus.php",
  "fetchHostFrequency": 30,
  "fetchServiceFrequency": 30,
  "fetchAlertFrequency": 60,
  "fetchHostGroupFrequency": 3600,
  "fetchCommentFrequency": 120,
  "alertDaysBack": 14,
  "alertHoursBack": 24,
  "alertMaxItems": 50,
  "hostsAndServicesSideBySide": false,
  "hideSummarySection": true,
  "hideServiceSection": false,
  "hideServicePending": false,
  "hideServiceWarning": false,
  "hideServiceUnknown": false,
  "hideServiceCritical": false,
  "hideServiceAcked": false,
  "hideServiceScheduled": false,
  "hideServiceFlapping": false,
  "hideServiceSoft": false,
  "hideServiceNotificationsDisabled": false,
  "serviceSortOrder": "newest",
  "hideHostSection": false,
  "hideHostPending": false,
  "hideHostDown": false,
  "hideHostUnreachable": false,
  "hideHostAcked": false,
  "hideHostScheduled": false,
  "hideHostFlapping": false,
  "hideHostSoft": false,
  "hideHostNotificationsDisabled": false,
  "hostSortOrder": "newest",
  "hideHistory": false,
  "hideHistoryTitle": false,
  "hideHistory24hChart": false,
  "hideHistoryChart": true,
  "hideAlertSoft": false,
  "hostgroupFilter": "",
  "servicegroupFilter": "",
  "versionCheckDays": 0,
  "language": "English",
  "locale": "en",
  "dateFormat": "llll",
  "clockDateFormat": "ll",
  "clockTimeFormat": "LTS",
  "fontSizeEm": "0.8em",
  "customLogoEnabled": true,
  "customLogoUrl": "/img/nems_logo.png",
  "doomguyEnabled": false,
  "doomguyConcernedAt": 1,
  "doomguyAngryAt": 2,
  "doomguyBloodyAt": 4,
  "showEmoji": false,
  "speakItems": true,
  "speakItemsVoice": "Microsoft Mark - English (United States)",
  "playSoundEffects": true,
  "soundEffectCritical": "./sample-audio/critical.mp3",
  "soundEffectWarning": "./sample-audio/warning.mp3",
  "soundEffectOk": "./sample-audio/ok.mp3",
  "showNextCheckInProgressBar": true,
  "hideHamburgerMenu": true,
  "hideBottomMenu": true,
  "automaticScroll": false,
  "automaticScrollTimeMultiplier": 4,
  "automaticScrollWaitSeconds": 10,
  "showMiniMap": false,
  "miniMapWidth": 120,
  "flynnEnabled": false,
  "flynnConcernedAt": 1,
  "flynnAngryAt": 4,
  "flynnBloodyAt": 8,
  "flynnCssScale": "0.8"
}' > /var/www/nagiostv/client-settings.json

  # CSS Overrides for NEMS Linux
  echo '.filter-icon, .generic-icon, .BottomPanel, .SettingsBox, .FooterAreaRight, .FooterAreaMiddle, .softIcon, .NavBottomBar, .hot-dog-menu, .sound-icon, .hamburger-menu { display:none !important; } .CustomLogo img { max-height: 36px !important; } .header-application-name { margin-left: 10px !important; }' >> /var/www/nagiostv/assets/*.css
  # Set permissions
  chown -R www-data:www-data /var/www/nagiostv
  chown root:root /etc/apache2/conf-available/nagiostv.conf
  mv /var/www/nagiostv/index.html /var/www/nagiostv/index.php
  sed -i 's|</body>|<script src="/js/jquery.min.js"></script><script src="/js/jquery.backstretch.min.js"></script><?php require_once("/var/www/html/inc/wallpaper.php"); ?><style>.App { background: none; } .Base { background: rgba(0,0,0,.4); -webkit-border-radius: 8px; -moz-border-radius: 8px; border-radius: 8px; padding: 2px 8px; } .highcharts-legend-item tspan { fill: #aaa !important; }</style>&|' /var/www/nagiostv/index.php
  sed -i 's|./favicon.png|/favicon.ico|' /var/www/nagiostv/index.php

  # Fix PHP 8.2 compatibility. See https://github.com/chriscareycode/nagiostv-react/issues/80#issuecomment-1992264128
  sed -i 's|join($query_arr, "\\n");|implode("\\n", $query_arr);|' /var/www/nagiostv/connectors/livestatus.php

  # Generate livestatus connector config NagiosTV 0.6.5+ / NEMS Linux 1.6+
  socket=`/usr/local/bin/nems-info socket`
  livestatusConfig=$'[livestatus]\nsocket_path = '
  echo "${livestatusConfig}${socket}" > '/var/www/nagiostv/connectors/livestatus-settings.ini'

  # Enable nagiostv
  a2enconf nagiostv
  # Reload apache2
  systemctl reload apache2
  echo 'Done installing NagiosTV Dashboard'
else
  echo 'Failed installing NagiosTV Dashboard'
fi

# Remove the tmp files
cd /tmp
rm -rf $tmpdir
